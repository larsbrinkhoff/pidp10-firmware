LIBS = `/usr/bin/sdl2-config --libs`  -lm -lrt -lpthread -lpcre -ldl -lpng -lz -lvdeplug -Wl,-R,/lib/x86_64-linux-gnu/ -L/lib/x86_64-linux-gnu/

